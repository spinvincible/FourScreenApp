<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF7126"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabhpandey.fourscreenapp.Screen2">

    <Button
        android:id="@+id/buttonS21"
        style="@style/btnStyleShakespeare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="59dp"

        android:onClick="Button21"
        android:text="Screen 1" />

    <Button
        android:id="@+id/buttonS22"
        style="@style/btnStyleShakespeare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/buttonS21"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="Button22"
        android:text="Screen 2" />

    <Button
        android:id="@+id/buttonS23"
        style="@style/btnStyleShakespeare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonS22"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="Button23"
        android:text="Screen 3" />

    <Button
        android:id="@+id/buttonS24"
        style="@style/btnStyleShakespeare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonS23"


        android:layout_alignStart="@+id/buttonS23"
        android:layout_below="@+id/buttonS23"
        android:layout_marginBottom="10dp"
        android:onClick="Button24"
        android:text="Screen 4" />

    <TextView
        android:id="@+id/textViewS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonS24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Screen 2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"

        android:textStyle="bold" />

</RelativeLayout>
